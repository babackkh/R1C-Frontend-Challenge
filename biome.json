{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": false,
		"include": ["./src/**/*.js", "./src/**/*.ts"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 140,
		"formatWithErrors": false
	},
	"organizeImports": {
		"enabled": true
	},
	"css": { "formatter": { "enabled": true } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": { "level": "error", "fix": "safe" }
			},
			"suspicious": {
				"noConsoleLog": { "fix": "safe", "level": "error" },
				"noDoubleEquals": { "fix": "safe", "level": "error", "options": { "ignoreNull": true } },
				"noLabelVar": { "level": "error" }
			}
		},
		"ignore": ["*.spec.ts"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"enabled": true,
			"trailingCommas": "all",
			"semicolons": "always",
			"bracketSpacing": true,
			"bracketSameLine": false
		}
	}
}
